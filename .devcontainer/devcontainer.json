{
  "name": "langchain-agent",
  "image": "mcr.microsoft.com/devcontainers/python:3.10", 
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "GitHub.codespaces"
      ]
    }
  },
  "postCreateCommand": "pip install -r requirements.txt",
  "forwardPorts": [7860],
  "remoteEnv": {
    "API_KEY": "$API_KEY"
  }
}
